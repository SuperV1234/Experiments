        -pedantic \
        -W \
        -Wall \
        -Wextra \
        -Wno-unused-local-typedefs \
        -Wwrite-strings \
        -Wundef \
        -Wno-missing-field-initializers \
        -Wpointer-arith \
        -Wcast-align \
        -Wno-unreachable-code \
